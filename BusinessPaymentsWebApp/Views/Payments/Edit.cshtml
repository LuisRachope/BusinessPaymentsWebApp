@model BusinessPaymentsWebApp.Models.ViewModels.PaymentFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<h4>Payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Payment.Id" />
            <div class="form-group">
                <label asp-for="Payment.Amount" class="control-label"></label>
                <input asp-for="Payment.Amount" class="form-control" />
                <span asp-validation-for="Payment.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.DatePayment" class="control-label"></label>
                <input asp-for="Payment.DatePayment" class="form-control" />
                <span asp-validation-for="Payment.DatePayment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.Remarks" class="control-label"></label>
                <input asp-for="Payment.Remarks" class="form-control" />
                <span asp-validation-for="Payment.Remarks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.CustomerId" class="control-label"></label>
                <select asp-for="Payment.CustomerId" class="form-control" asp-items="@(new SelectList(Model.Customers, "Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a class="btn btn-warning" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
